<%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <% if @task.persisted? %>
      <%= f.check_box :completed %>
      <%= f.label :completed, class: "mb-3"%>
    <% end %>
    <br>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
